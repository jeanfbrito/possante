<%= simple_form_for(@refuelling) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :mileage %>
    <%= f.input :liter_price %>
    <%= f.input :liters %>
    <%= f.input :gas_station %>
    <%= f.input :traveled_mileage %>
    <%= f.input :total_value %>
    <%= f.input :result %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
