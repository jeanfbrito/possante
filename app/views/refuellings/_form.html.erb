<%= simple_form_for [@vehicle, @refuelling] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, as: :string, input_html: { class: "datepicker", value:  f.object.date ? f.object.date.strftime('%d/%m/%Y') : Date.today.strftime('%d/%m/%Y') } %>
    <%= f.input :mileage %>
    <%= f.input :liter_price %>
    <%= f.input :liters %>
    <%= f.input :gas_station %>
    <%= f.input :total_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script>
$('.datepicker').datepicker({format: 'dd/mm/yyyy'});
</script>
