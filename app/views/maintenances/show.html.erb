<div class="page-header">
  <%= link_to vehicle_maintenances_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%#= link_to edit_maintenance_path(@maintenance), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <%# end %>
  <h1>Show maintenance</h1>
</div>

<dl class="dl-horizontal">
  <dt>Date:</dt>
  <dd><%= @maintenance.date %></dd>

  <dt>Cost:</dt>
  <dd><%= @maintenance.cost %></dd>

  <dt>Description:</dt>
  <dd><%= @maintenance.description %></dd>

  <dt>Warranty:</dt>
  <dd><%= @maintenance.warranty %></dd>

  <dt>Mileage:</dt>
  <dd><%= @maintenance.mileage %></dd>

  <dt>Vehicle:</dt>
  <dd><%= @maintenance.vehicle %></dd>

  <dt>Warranty status:</dt>
  <dd><%= @maintenance.warranty_status %></dd>

  <dt>Type:</dt>
  <dd><%= @maintenance.type %></dd>

</dl>
<h3>Documents  
  <%= link_to new_vehicle_maintenance_document_path(@vehicle, @maintenance), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New document
  <% end %>
</h3>

<br>

<div class="row">
  <% @documents.each do |document| %>
    <div class="col-xs-6 col-md-3">
      <a href="#" class="thumbnail">
        <img src="<%= document.file.url %>" alt="<%= document.file.url %>">
      </a>
      <div class="actions">
        <%= link_to "Remove", vehicle_maintenance_document_path(@vehicle, @maintenance, document), :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
</div>
