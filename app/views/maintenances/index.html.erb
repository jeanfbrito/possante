<div class="page-header">
  <%= link_to new_maintenance_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Maintenance
  <% end %>
  <h1>Listing maintenances</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Warranty</th>
            <th>Mileage</th>
            <th>Vehicle</th>
            <th>Warranty status</th>
            <th>Type</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @maintenances) do |maintenance| %>
            <td><%= maintenance.date %></td>
            <td><%= maintenance.cost %></td>
            <td><%= maintenance.description %></td>
            <td><%= maintenance.warranty %></td>
            <td><%= maintenance.mileage %></td>
            <td><%= maintenance.vehicle %></td>
            <td><%= maintenance.warranty_status %></td>
            <td><%= maintenance.type %></td>
            <td><%= link_to 'Show', maintenance %></td>
        <td><%= link_to 'Edit', edit_maintenance_path(maintenance) %></td>
        <td><%= link_to 'Destroy', maintenance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
