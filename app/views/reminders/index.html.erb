<div class="page-header">
  <%= link_to new_vehicle_reminder_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Reminder
  <% end %>
  <%= link_to vehicles_path, class: 'btn btn-default' do %>
    <span class="fa fa-arrow-left"></span>
    Back
  <% end %>
  <h1>Listing reminders</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Mileage</th>
            <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @reminders) do |reminder| %>
            <td><%= reminder.name %></td>
            <td><%= reminder.date %></td>
            <td><%= reminder.mileage %></td>
        <td><%= link_to 'Edit', edit_vehicle_reminder_path(@vehicle, reminder) %></td>
        <td><%= link_to 'Destroy',vehicle_reminder_path(@vehicle, reminder), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
