<div class="page-header">
  <%= link_to reminders_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_reminder_path(@reminder), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show reminder</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @reminder.name %></dd>

  <dt>Date:</dt>
  <dd><%= @reminder.date %></dd>

  <dt>Mileage:</dt>
  <dd><%= @reminder.mileage %></dd>

  <dt>Vehicle:</dt>
  <dd><%= @reminder.vehicle %></dd>

</dl>
